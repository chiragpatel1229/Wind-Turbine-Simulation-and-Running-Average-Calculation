{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Wind Turbine",
            "type": "shell",
            "command": "g++",
            "args": [
                "wind_turbine.cpp",
                "-Ifreeglut/include",
                "-Lfreeglut/lib/x64",
                "-o",
                "wind_turbine.exe",
                "-lfreeglut",
                "-lopengl32",
                "-lglu32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}
